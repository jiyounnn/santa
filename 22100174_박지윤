                Console.WriteLine("　　 ヽノノー-｜ ");
                Console.WriteLine("　　   |＿_/_/ ");
                Console.WriteLine("　　　 `ー^ー`");
                Console.WriteLine("");
                Console.ForegroundColor = ConsoleColor.White;
