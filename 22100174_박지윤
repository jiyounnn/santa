            Console.WriteLine("");

            string ii = Console.ReadLine();
            if (ii == "아무거나")
            {
                Console.Clear();
                Console.WriteLine("아무거나 챙긴 당신 어서 산타를 따라가보세요!");
                String _ = Console.ReadLine();
                Console.Clear();
                go();

            }
            else if (ii == "물어보기")
            {
                Console.Clear();
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("  -　-　저기요 !!　-　-");
                Console.ForegroundColor = ConsoleColor.White;
                Console.WriteLine("");

                Console.WriteLine("옆 사람을 불렀습니다.");
                Console.WriteLine("");
