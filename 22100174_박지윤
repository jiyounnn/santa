        static void nojamStory()
        {
            Console.WriteLine("당신은 그저그런 가족여행을 즐기고 계십니다.");
            Console.WriteLine("");
            Console.WriteLine("너무 지루한 나머지 잠에 들고 맙니다..");
            Console.WriteLine("");
            Console.WriteLine("점점 꿈속에 빠집니다.");
            String _ = Console.ReadLine();
            Console.Clear();
            alone();

        }

        static void orora()
        {
            Console.Clear();
            Console.WriteLine("");
            Console.WriteLine("당신은 오로라를 직관합니다. 너무 멋있습니다. 그때!!! ");
            Console.WriteLine("");
            Console.WriteLine("그 사이로 산타로 추정되는 썰매가 지나갑니다!!");
            Console.WriteLine("");
            Console.WriteLine("따라가보시겠습니까? ( 당연하죠 / 안가요 )");
            Console.WriteLine("");

            string ss = Console.ReadLine();
            if (ss == "당연하죠")
            {
                Console.Clear();
                Console.WriteLine("산타로 추정되는 썰매를 따라가보는 당신");
                Console.ForegroundColor = ConsoleColor.Green;
                Console.WriteLine("             ●             ");
                Console.WriteLine("            ┗╋┓  조심 조심 ");
                Console.WriteLine("            ┏┫             ");
                Console.WriteLine("             ┃             ");
                Console.ForegroundColor = ConsoleColor.White;
                Console.WriteLine("산타가 정말 있습니다  !!");
                Console.WriteLine("");
                Console.WriteLine("그때 산타와 눈이 마주쳤습니다.  다가오고 있습니다.");
                String _ = Console.ReadLine();
                Console.Clear();
                friend();

            }

            else if (ss == "안가요")
            {
                Console.Clear();
                Console.WriteLine("산타 이야기가 재미 없으신가요.....(시무룩) ");
                Console.WriteLine("알겠습니다. 계속 이어가 보도록 하죠...");

                nojamStory();
            }
        }

        static void santa()
        {
            Console.Clear();
            Console.WriteLine("");
            Console.WriteLine("이 마을에 전설로 내려오는 이야기가 있습니다.");
            Console.WriteLine("");
            Console.WriteLine("바로 산타를 볼 수 있다는 이야기인데요. 조건이 있습니다.");
            Console.WriteLine("");
            Console.WriteLine("- 조건 ------------------------------------------------");
            Console.WriteLine("|                                                      |");
            Console.WriteLine("| 1. 크리스마스 이브에서 크리스마스로 넘어가는 밤 12시 |");
            Console.WriteLine("|                                                      |");
            Console.WriteLine("| 2. 상자에 숨기 (다른 곳에 숨을 시 산타가 알아봄)     |");
            Console.WriteLine("|                                                      |");
            Console.WriteLine("| 3. 반드시 굴뚝의 불을 꺼 놓을 것                     |");
            Console.WriteLine("|                                                      |");
            Console.WriteLine("| 4. 산타가 와도 절대 놀라지 않고 말걸지 않을 것!      |");
            Console.WriteLine("|    - 다시는 산타를 볼 수 없게 됨                     |");
            Console.WriteLine("-------------------------------------------------------");
            Console.WriteLine("");
            Console.WriteLine("산타를 만나보시겠습니까?  ( 예 / 아니요)");

            string aa = Console.ReadLine();
            if (aa == "예")
            {
                Console.WriteLine("");
                Console.WriteLine("이제 곧 밤 12시가 되어갑니다.");
                Console.WriteLine("");
                Console.WriteLine("상자에 숨으셔야 합니다. 굴뚝의 불을 꺼 놓을셨나요?  (당연하죠 / 아니요) ");

                string nn = Console.ReadLine();
                if (nn == "당연하죠")
                {
                    Console.WriteLine("");
                    Console.WriteLine("잘하셨습니다 이제 곧 산타가 옵니다");
                    Console.WriteLine("");
                    Console.WriteLine("11시 59분......12시!!!!");
                    Console.WriteLine("");
                    Console.WriteLine("굴뚝에서 소리가 납니다!");
                    Console.WriteLine("");
                    Console.WriteLine("산타 : 아효.... 이 집은 굴뚝이 좀 작군..");
                    Console.WriteLine("");
                    Console.WriteLine("!!!! 정말 산타가 있습니다!");
                    Console.WriteLine("");
                    Console.WriteLine("당신은 너무 놀라 그만 뒤에 있던 조명을 건드리고 말았습니다.");
                    Console.WriteLine("");
                    Console.WriteLine("이런 산타와 눈이 마주쳐버렸습니다.");
                    Console.WriteLine("");
                    String _ = Console.ReadLine();
                    Console.Clear();
                    friend();
                }
                else if (nn == "아니요")
                {
                    Console.WriteLine("산타가 굴뚝을 타고 내려오다가 화상을 입었습니다.");
                    Console.WriteLine("");
                    Console.WriteLine("앞으로 당신의 집에는 오지 않을 예정입니다. 아쉽군요");
                    String _ = Console.ReadLine();
                    Console.Clear();
                    no();     //지뢰

                }
            }
            else if (aa == "아니요")
            {
                Console.WriteLine("지금이라도 오로라를 보러 가시겠습니까? (네 / 아니요)");

                String ff = Console.ReadLine();
                if (ff == "네")
                {
                    orora();
                }
                else if (ff == "아니요")
                {
                    nojamStory();
                }
                else
                {
                    no();
                }

            }
            else
            {
                no();
            }
        }
    }
}
